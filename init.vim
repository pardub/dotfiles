" always show the status bar
set laststatus=2

" turn on line numbering
set number
set relativenumber

" color scheme
syntax on
" colorscheme onedark
filetype on
filetype plugin indent on

" sane text files
set fileformat=unix 
set encoding=utf-8 
set fileencoding=utf-8

" sane editing
set tabstop=4 
set shiftwidth=4 
set softtabstop=4 
" set colorcolumn=80 
set expandtab
set viminfo='25,\"50,n~/.viminfo

" COLOR LINE NUMBER
" set highlight LineNr ctermfg=red
